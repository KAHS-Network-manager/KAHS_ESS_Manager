<Window x:Class="ManagementTool.Windows.WriteBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WriteBoard" Height="800" Width="500" ResizeMode="NoResize">
    <Grid>
        <Label Content="제목" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />
        <Label Content="본문" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,64,0,0" />
        <TextBox x:Name="TbWriteTitle" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,36,10,0" />
        <TextBox x:Name="TbWriteContent" Height="616" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,95,10,0" />
        <Button Content="전송" Margin="344,716,10,10" Click="Submit" />
    </Grid>
</Window>